<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.whattodo.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FFB74D"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview"
        android:textSize="35sp"
        android:textColor="#000000"
        android:layout_weight="2"
        android:textStyle="bold"
        android:text="Denzel,5 and Rattle,6 Went out to play and a van stopped by.An old woman asked whether both of them would like some candy in their van."
         />
        <Button
            android:id="@+id/button_top"
            android:layout_height="wrap_content"

            android:layout_width="match_parent"
            android:textSize="20sp"
            android:text="They both said yes" />
        <Button
            android:id="@+id/button_bottom"
            android:layout_height="wrap_content"

            android:textSize="20sp"
            android:layout_width="match_parent"
            android:text="They both said no" />
    </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
